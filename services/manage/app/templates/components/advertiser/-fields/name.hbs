<label for="advertiser-name">Name {{form-elements/required-field}}</label>
{{#form.elements.input
  id="advertiser-name"
  class="form-control"
  autocomplete="off"
  autofocus=autofocus
  type="text"
  name="name"
  label="Name"
  value=value
  aria-labeledby="advertiser-name-help"
  on-change=on-change
  required=true
as |input|
}}
  {{input.element}}
  {{input.elements.invalid-feedback}}
{{/form.elements.input}}
<small id="advertiser-name-help" class="form-text text-muted">The advertiser's company name.</small>
