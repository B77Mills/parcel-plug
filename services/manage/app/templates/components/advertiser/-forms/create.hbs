{{#auto-save/form
  id="advertiser-create"
  shouldAutosave=false
  disabled=isActionRunning
  on-submit=(action "create")
as |form|
}}
  {{yield
    (hash
      fields=(hash
        name=(component "advertiser/-fields/name" form=form value=model.name autofocus=true on-change=(action "setFieldValue"))
      )
      buttons=(hash
        save=(component "form-elements/save-button" class="btn action btn-success" isSaving=isActionRunning)
      )
    )
  }}
{{/auto-save/form}}
