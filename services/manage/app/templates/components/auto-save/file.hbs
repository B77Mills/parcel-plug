{{yield
  (hash
    element=(component "form-elements/file"
      id=id
      name=name
      class=class
      disabled=disabled
      readonly=_readonly
      accept=accept
      autofocus=autofocus
      required=required
      multiple=multiple

      validator=validator
      on-insert=(action "setChildInputComponent")
      on-files-changed=(action sendOnChange)
    )
    elements=(hash
      label=(component "form-elements/label"
        value=label
        required=required
        for=id
      )
      indicator=(component "auto-save/indicator"
        visible=shouldSave
        isChanging=isChanging
        changeComplete=changeComplete
        validationMessage=_child.validationMessage
      )
      invalid-feedback=(component "auto-save/invalid-feedback"
        message=_child.validationMessage
      )
    )
  )
}}


