<label for="deployment-name">Name {{required-field}}</label>
{{#form.elements.input
  id="deployment-name"
  class="form-control"
  autocomplete="off"
  autofocus=autofocus
  type="text"
  name="name"
  label="Name"
  value=value
  aria-labeledby="deployment-name-help"
  on-change=on-change
  required=true
as |input|
}}
  {{input.element}}
  {{input.elements.invalid-feedback}}
{{/form.elements.input}}
<small id="deployment-name-help" class="form-text text-muted">The email deployment name.</small>
