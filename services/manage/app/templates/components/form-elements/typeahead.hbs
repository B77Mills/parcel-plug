{{#if multiple}}
  {{#power-select-multiple
    triggerClass=_triggerClass
    search=(perform search)
    selected=_value
    placeholder=placeholder
    onchange=(action "handleChange")
    closeOnSelect=closeOnSelect
    disabled=disabled
  as |item|
  }}
    {{ yield item }}
  {{/power-select-multiple}}
{{else}}
  {{#power-select
    triggerClass=_triggerClass
    search=(perform search)
    selected=_value
    placeholder=placeholder
    allowClear=allowClear
    closeOnSelect=closeOnSelect
    disabled=disabled
    onchange=(action "handleChange")
  as |item|
  }}
    {{ yield item }}
  {{/power-select}}
{{/if}}
{{form-elements/input
  name=name
  on-insert=(action "setInputElement")
  autocomplete=autocomplete
  show=false
}}
