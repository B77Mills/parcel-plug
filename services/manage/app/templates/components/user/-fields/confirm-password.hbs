<label for="user-confirm-password">Password {{form-elements/required-field}}</label>
{{#form.elements.input
  id="user-confirm-password"
  class="form-control"
  autocomplete="off"
  autofocus=autofocus
  type="password"
  name="confirmPassword"
  label="Confirm Password"
  value=value
  aria-labeledby="user-confirm-password-help"
  on-change=on-change
  required=true
as |input|
}}
  {{input.element}}
  {{input.elements.invalid-feedback}}
{{/form.elements.input}}
<small id="user-confirm-password-help" class="form-text text-muted">Must match the inputted password.</small>

  {{!-- Disable password autofill --}}
  <input type="text" class="hidden-input">
  <input type="password" class="hidden-input">
  {{!-- Disable password autofill --}}
