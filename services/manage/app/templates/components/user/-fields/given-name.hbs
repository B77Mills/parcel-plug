<label for="user-given-name">First Name {{form-elements/required-field}}</label>
{{#form.elements.input
  id="user-given-name"
  class="form-control"
  autocomplete="off"
  autofocus=autofocus
  type="text"
  name="givenName"
  label="First Name"
  value=value
  aria-labeledby="user-given-name-help"
  on-change=on-change
  required=true
as |input|
}}
  {{input.element}}
  {{input.elements.invalid-feedback}}
{{/form.elements.input}}
<small id="user-given-name-help" class="form-text text-muted">The user's first name.</small>
