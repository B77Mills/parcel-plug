{{#nav-breadcrumbs as |crumbs|}}
  {{#crumbs.item}}{{#link-to "manage.adunits.index"}}{{entypo-icon "browser"}} Ad Units{{/link-to}}{{/crumbs.item}}
  {{#crumbs.item active=true}}Create New{{/crumbs.item}}
{{/nav-breadcrumbs}}

{{#auto-save/form
  id="adunit-create"
  shouldAutosave=false
  model=model
  disabled=isActionRunning
  on-submit=(action "create")
as |form|
}}
  <div class="card">
    <div class="card-header"></div>
    <div class="card-body">

      <div class="row">
        <div class="col">
          {{adunit/-fields/name
            form=form
            value=model.name
            autofocus=true
            on-change=(action "setFieldValue")
          }}
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          {{adunit/-fields/deployment
            class="mb-3 mb-lg-0"
            form=form
            value=model.deployment
            on-change=(action "setFieldValue")
          }}
        </div>
        <div class="col-md-3">
          {{adunit/-fields/width
            class="mb-3 mb-lg-0"
            form=form
            value=model.width
            on-change=(action "setFieldValue")
          }}
        </div>
        <div class="col-md-3">
          {{adunit/-fields/height
            class="mb-0"
            form=form
            value=model.height
            on-change=(action "setFieldValue")
          }}
        </div>
      </div>

    </div>
    <div class="card-footer">
      {{form-elements/save-button
        class="btn btn-success"
        isSaving=isActionRunning
      }}
    </div>
  </div>
{{/auto-save/form}}
