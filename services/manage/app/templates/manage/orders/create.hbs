{{#nav-breadcrumbs as |crumbs|}}
  {{#crumbs.item}}{{#link-to "manage.orders.index"}}{{entypo-icon "credit"}} Orders{{/link-to}}{{/crumbs.item}}
  {{#crumbs.item active=true}}Create New{{/crumbs.item}}
{{/nav-breadcrumbs}}

{{#auto-save/form
  id="order-create"
  shouldAutosave=false
  model=model
  disabled=isActionRunning
  on-submit=(action "create")
as |form|
}}
  <div class="card">
    <div class="card-header"></div>
    <div class="card-body">

      <div class="row">
        <div class="col">
          {{order/-fields/name
            form=form
            value=model.name
            autofocus=true
            on-change=(action "setFieldValue")
          }}
        </div>
      </div>

      <div class="row">
        <div class="col">
          {{order/-fields/advertiser
            class="mb-0"
            form=form
            value=model.advertiser
            on-change=(action "setFieldValue")
          }}
        </div>
      </div>

    </div>
    <div class="card-footer">
      {{form-elements/save-button
        class="btn btn-success"
        isSaving=isActionRunning
      }}
    </div>
  </div>
{{/auto-save/form}}
