<div class="card z-depth-0">
  <div class="card-header">
    <strong>{{ad/-icon}} {{model.name}} ({{model.size}})</strong>
  </div>

  <div class="card-body">
    {{#auto-save/form
      name="edit-ad"
      identifier=model.id
    as |form|
    }}
      <div class="row">
        <div class="col-md-6">
          {{ad/-fields/name
            class="mb-3 mb-lg-0"
            form=form
            value=model.name
            on-change=(action "setName")
          }}
        </div>
        <div class="col-md-3">
          {{ad/-fields/width
            class="mb-3 mb-lg-0"
            form=form
            value=model.width
            on-change=(action "setWidth")
          }}
        </div>
        <div class="col-md-3">
          {{ad/-fields/height
            class="mb-3"
            form=form
            value=model.height
            on-change=(action "setHeight")
          }}
        </div>
      </div>

      <div class="row">
        <div class="col">
          {{ad/-fields/url
            class="mb-0"
            form=form
            value=model.url
            on-change=(action "setUrl")
          }}
        </div>
      </div>

      <div class="row">
        <div class="col">
          {{#if model.image.src}}
            <img src={{model.image.src}} class="img-thumbnail">
          {{/if}}
          {{#file-upload
            class="d-block"
            name="logo"
            for="upload-logo"
            accept="image/*"
            multiple=false
            onfileadd=(action "setImage")
            as |queue|
          }}
            <a class="btn btn-block btn-sm btn-primary text-white">
              {{#if queue.files.firstObject}}
                {{entypo-icon "hour-glass"}} Uploading...
              {{else}}
                {{entypo-icon "upload"}} Upload new logo
              {{/if}}
            </a>
            {{!-- {{progress-bar show=isActionRunning value=queue.files.firstObject.progress}} --}}
          {{/file-upload}}
        </div>
      </div>
    {{/auto-save/form}}
  </div>

  <div class="card-footer text-right">
    {{confirm-button
      icon="trash"
      label="Delete"
      runningLabel="Deleting..."
      class="btn-danger"
      disabled=isActionRunning
      isRunning=isDeleting
      onConfirm=(action "delete")
    }}
  </div>

</div>
