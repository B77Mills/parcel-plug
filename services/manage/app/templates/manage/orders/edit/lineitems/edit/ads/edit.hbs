<div class="card z-depth-0">
  <div class="card-header">
    <strong>{{ad/-icon}} {{model.name}} ({{model.size}})</strong>
  </div>

  <div class="card-body">
    {{#auto-save/form
      name="edit-ad"
      identifier=model.id
    as |form|
    }}
      <div class="row">
        <div class="col-md-6">
          {{ad/-fields/name
            class="mb-3 mb-lg-0"
            form=form
            value=model.name
            on-change=(action "setName")
          }}
        </div>
        <div class="col-md-3">
          {{ad/-fields/width
            class="mb-3 mb-lg-0"
            form=form
            value=model.width
            on-change=(action "setWidth")
          }}
        </div>
        <div class="col-md-3">
          {{ad/-fields/height
            class="mb-3"
            form=form
            value=model.height
            on-change=(action "setHeight")
          }}
        </div>
      </div>

      <div class="row">
        <div class="col-md-9">
          {{ad/-fields/url
            form=form
            value=model.url
            on-change=(action "setUrl")
          }}
        </div>
        <div class="col-md-3">
          {{ad/-fields/paused
            form=form
            value=model.paused
            on-change=(action "setPaused")
          }}
        </div>
      </div>

      <div class="row">
        <div class="col">
          {{ad/-fields/image
            class="mb-0"
            form=form
            value=model.image
            on-change=(action "setImage")
          }}
        </div>
      </div>
    {{/auto-save/form}}
  </div>

  <div class="card-footer d-flex justify-content-between">
    <p class="mb-0">
      {{ad/-status status=model.status}}
      {{#if model.requires}}
        <span class="text-muted">(requires {{model.requires}})</span>
      {{/if}}
    </p>
    <div class="d-flex align-items-end">
      {{confirm-button
        icon="trash"
        label="Delete"
        runningLabel="Deleting..."
        class="btn-danger"
        disabled=isActionRunning
        isRunning=isDeleting
        onConfirm=(action "delete")
      }}
    </div>
  </div>

</div>
